<div class="container">
<div id="text-carousel" class="carousel slide" data-ride="carousel" style="height:200px;">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

    <!-- Wrapper for slides -->
    <div class="row">
        <div class="col-xs-offset-3 col-xs-6">
            <div class="carousel-inner bg-primary" style="padding-left:20px;">
                {{#each model as |reminder|}}
                <div class="item {{if (check reminder.ord '1') 'active'}}">
                    <div class="carousel-content">
                        <h1  class="text-center bg-success" style="color:black;">{{reminder.title}}</h1>
                        <h2>{{reminder.purpose}}</h2>
                        <h3>{{reminder.date}}</h3>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#text-carousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#text-carousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>

</div>
</div>
