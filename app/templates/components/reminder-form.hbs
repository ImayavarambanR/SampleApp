<form style="margin-top:50px;">
  <div class="form-group">
    <label for="title">Title</label>
    {{input type="text" class="form-control" id="title" value=title placeholder="Title"}}
  </div>
  <div class="form-group">
    <label for="purpose">Purpose</label>
    {{input type="text" class="form-control" id="purpose" value=purpose placeholder="Purpose"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input type="date" class="form-control" id="date" value=date}}
  </div>
  <div class="form-group">
    <label for="Time">Time</label>
    {{input type="time" class="form-control" id="time" value=time}}
  </div>
  <div class="form-group">
    <label for="exampleTextarea">Description</label>
    {{textarea class="form-control" id="desc" value=desc rows="3"}}
  </div>
  <fieldset class="form-group">
    <legend>Type</legend>
    <div class="form-check">
      <label class="form-check-label">
        <input type="radio" class="form-check-input" name="type" id="op1" value="Important" checked>
        Important
      </label>
    </div>
    <div class="form-check">
    <label class="form-check-label">
        <input type="radio" class="form-check-input" name="type" id="op2" value="Less Important">
        Less Important
      </label>
    </div>
    <div class="form-check disabled">
    <label class="form-check-label">
        <input type="radio" class="form-check-input" name="type" id="op3" value="Finished">
        Finished
      </label>
    </div>
  </fieldset>
  <button type="submit" class="btn btn-primary" {{action "clickyy"}}>Create</button>
</form>
{{yield}}
